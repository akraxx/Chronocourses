<UserControl x:Class="Chronocourses.Client.TestControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="200" d:DesignWidth="200">
    
    <Border BorderThickness="2" BorderBrush="White">
        <Grid x:Name="LayoutRoot" Background="Black" Width="200" Height="200" >
            <ListBox DisplayMemberPath="Name" Name="listBox1" Background="Black" Margin="0,0,0,53" />
            <Button Content="OK" Height="56" HorizontalAlignment="Left" Margin="12,145,0,0" x:Name="OkBtn" VerticalAlignment="Top" Width="176" FontSize="17" />
        </Grid>
    </Border>
</UserControl>
