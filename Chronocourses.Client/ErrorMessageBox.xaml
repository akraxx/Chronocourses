<UserControl x:Class="Chronocourses.Client.ErrorMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <StackPanel x:Name="LayoutRoot"  Width="300" Height="140" Background="Black">
        <TextBlock x:Name="tbx" Text="Select a valid shop to continue" Height="39" Width="287" Margin="10,15,0,0"/>
        <Button x:Name="btnOK" Content="OK" Height="70" Width="106" />
    </StackPanel>
</UserControl>
